/* 动画组件样式 */
.animation-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
  z-index: 10;
}

/* 粒子系统样式 */
.particle-system {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.particle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 215, 0, 0.6);
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
  transition: all 0.3s ease;
}

/* 卡片系统样式 */
.card-system {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.floating-card, .falling-card {
  position: absolute;
  width: 60px;
  height: 80px;
  background: white;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  border: 2px solid rgba(0, 0, 0, 0.1);
  transition: all 0.5s ease;
}

/* 飘落卡片特定样式 */
.falling-card {
  transition: none;
  animation: fallGlow 3s infinite alternate;
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.card-rank {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.card-suit {
  font-size: 24px;
  margin-top: 4px;
}

/* 根据花色设置颜色 */
.floating-card:nth-child(odd) .card-suit,
.card-content.red .card-suit {
  color: #e74c3c; /* 红心/方块 */
}

.floating-card:nth-child(even) .card-suit,
.card-content.black .card-suit {
  color: #2c3e50; /* 黑桃/梅花 */
}

@keyframes cardFloat {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-100px) rotate(90deg);
  }
  50% {
    transform: translateY(-200px) rotate(180deg);
  }
  75% {
    transform: translateY(-150px) rotate(270deg);
  }
}

/* 响应式调整 */
@media (max-width: 750px) {
  .floating-card {
    width: 50px;
    height: 70px;
  }
  
  .card-rank {
    font-size: 16px;
  }
  
  .card-suit {
    font-size: 20px;
  }
}

/* 性能优化 */
.particle, .floating-card, .falling-card {
  will-change: transform, opacity;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

/* 飘落卡片发光效果 */
@keyframes fallGlow {
  0% {
    filter: brightness(1) drop-shadow(0 0 5px rgba(255, 215, 0, 0.3));
  }
  100% {
    filter: brightness(1.2) drop-shadow(0 0 15px rgba(255, 215, 0, 0.6));
  }
}