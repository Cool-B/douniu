<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view wx:if="{{loginFlag===1}}" class="container">
    <view class="home-container">
      <image class="bg-image" src="/assets/cow.png" mode="aspectFill"></image>

      <!-- 三个功能卡片容器 -->
      <view class="card-container">
        <button class="quick-start-btn" bindtap="quickStart">
          <view class="btn-icon">⚡</view>快速开始
        </button>
        <button class="join-btn" bindtap="showModal">
          <view class="btn-icon">🚪</view>
          加入游戏
        </button>
        <button class="rules-btn" bindtap="showRules">
          <view class="btn-icon">📖</view>
          游戏规则
        </button>
      </view>
      <!-- pages/index/index.wxml -->
      <!-- <view class="btn-icon">🚪</view> -->
      <!-- <view class="btn-icon">👑</view> -->
      <!-- <view class="btn-icon">📖</view> -->
    </view>
    <!-- <modal wx:if="{{modalShow}}" title="房间号" show="{{modalShow}}" bind:close="onCloseModal" bind:confirm="onConfirm" bind:cancel="onCancel">
      <view class="modal-content">
        <input type="text" placeholder="请输入房间号" bindinput="dialogInputChange" />
      </view>
      <button bindtap="quickStart">创建房间</button>
    </modal> -->
  </view>
  <view wx:if="{{loginFlag===2}}" class="container">
    <view class="userinfo">
      <block wx:if="{{canIUseNicknameComp && !hasUserInfo}}">
        <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
          <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
        </button>
        <view class="nickname-wrapper">
          <text class="nickname-label">昵称</text>
          <input type="nickname" class="nickname-input" bindtap="getUserProfile" placeholder="请输入昵称" bind:change="onInputChange" />
        </view>
      </block>
      <block wx:elif="{{!hasUserInfo}}">
        <button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 获取头像昵称 </button>
        <view wx:else> 请使用2.10.4及以上版本基础库 </view>
      </block>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
    </view>
  </view>
  <!-- 规则弹窗组件 -->
  <rules-modal visible="{{showRulesModal}}" bind:close="onCloseRules"></rules-modal>
  <!-- 房间号弹窗组件 -->
  <room-modal visible="{{modalShow}}" title="房间号" showQuickStart="{{true}}" bind:close="onCloseModal" bind:cancel="onCancel" bind:confirm="onConfirm" bind:quickstart="onQuickStartRoom"></room-modal>
</scroll-view>