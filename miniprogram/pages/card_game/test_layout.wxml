<!-- 布局测试文件 -->
<view class="test-container">
  <text class="test-title">布局测试页面</text>
  
  <!-- 测试玩家座位布局 -->
  <view class="players-container">
    <view class="player-seat player-0 banker-seat occupied animate-scale-in">
      <view class="player-info">
        <image class="player-avatar" src="../../assets/poke/banker.png" mode="aspectFill"></image>
        <view class="player-details">
          <text class="player-name">庄家玩家</text>
          <text class="player-bet">下注：100</text>
          <text class="player-score">积分：500</text>
        </view>
        <view class="banker-badge">庄家</view>
        <view class="ready-indicator ready">已准备</view>
      </view>
      
      <view class="cards-container">
        <view class="cards-show">
          <image class="card card-0 animate-card-deal" src="../../assets/poke/Heart/1.png" />
          <image class="card card-1 animate-card-deal" src="../../assets/poke/Heart/2.png" />
          <image class="card card-2 animate-card-deal" src="../../assets/poke/Heart/3.png" />
        </view>
      </view>
    </view>
    
    <view class="player-seat player-1 player-seat occupied animate-scale-in">
      <view class="player-info">
        <image class="player-avatar" src="../../assets/cow.png" mode="aspectFill"></image>
        <view class="player-details">
          <text class="player-name">普通玩家</text>
          <text class="player-bet">下注：50</text>
          <text class="player-score">积分：300</text>
        </view>
        <view class="ready-indicator not-ready">未准备</view>
      </view>
      
      <view class="cards-container">
        <view class="cards-hidden">
          <image class="card card-back animate-card-shuffle" src="../../assets/poke/Poker/Background.png" />
          <image class="card card-back animate-card-shuffle" src="../../assets/poke/Poker/Background.png" />
          <image class="card card-back animate-card-shuffle" src="../../assets/poke/Poker/Background.png" />
        </view>
      </view>
    </view>
    
    <view class="player-seat player-2 empty animate-scale-in">
      <view class="empty-seat">
        <text class="empty-text">空座位</text>
      </view>
    </view>
  </view>
  
  <!-- 测试控制按钮 -->
  <view class="game-controls">
    <view class="banker-controls">
      <button class="control-btn start-game-btn">
        <text class="btn-icon">▶</text>
        <text class="btn-text">开始游戏</text>
      </button>
      <button class="control-btn deal-cards-btn">
        <text class="btn-icon">🃏</text>
        <text class="btn-text">发牌</text>
      </button>
    </view>
    
    <view class="player-controls">
      <button class="control-btn ready-btn">
        <text class="btn-icon">✅</text>
        <text class="btn-text">准备</text>
      </button>
      <view class="bet-picker">
        <view class="picker-content">
          <text class="picker-icon">🎯</text>
          <text class="picker-text">下注：50</text>
        </view>
      </view>
    </view>
    
    <view class="countdown-display">
      <text class="countdown-text">10</text>
    </view>
  </view>
</view>